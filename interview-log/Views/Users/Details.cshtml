<script type="text/javascript">
    //this function opens one and closes the other
    function showCloseLevel(idOpen, idClose) {
        //Show idOpen
        document.getElementById(idOpen).style.display = "";
        //Close idClose
        document.getElementById(idClose).style.display = "none";
    }
</script>

@foreach (string item in ViewBag.Images)
{
    <a href="javascript:showCloseLevel('@item 2', '@item')"><img src="~/uploads/images/@item" width="100" id="@item" title="click to enlarge"/></a>
    <a href="javascript:showCloseLevel('@item', '@item 2')"><img src="~/uploads/images/@item" id="@item 2" style="display:none" title="click to make it small again" width="500" /></a>
}



