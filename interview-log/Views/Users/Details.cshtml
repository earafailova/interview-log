<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<script type="text/javascript">
    //this function opens one and closes the other
    function showCloseLevel(idOpen, idClose) {
        //Show idOpen
        document.getElementById(idOpen).style.display = "";
        //Close idClose
        document.getElementById(idClose).style.display = "none";
    }
</script>

<h3>Images:</h3>
@foreach (string item in ViewBag.Images)
{
    <a href="javascript:showCloseLevel('@item 2', '@item')"><img src="~/uploads/images/@Model.Id/@item" width="100" id="@item" title="click to enlarge" /></a>
    <a href="javascript:showCloseLevel('@item', '@item 2')"><img src="~/uploads/images/@Model.Id/@item" width="500" id="@item 2" style="display:none" title="click to make it small again" /></a>
}
<h3>files:</h3>
<div class="row">
    @foreach (MyFileInfo file in ViewBag.FileInfos)
    {
        <div class="col-md-4">
            <p>
                @file.Name <br />
                @file.Size <br />
            </p> 
            <p><a class="btn btn-danger"href="~/uploads/files/@Model.Id/@file.Name">Get it! &raquo;</a></p>
        </div>
    }
</div>
<form action="" method="post" enctype="multipart/form-data">

    <label for="file"></label>
    <input type="file" name="file" id="file" />

    <input type="submit" />
</form>
