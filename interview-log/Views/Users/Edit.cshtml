@model interview_log.Models.User

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Email)
        <div class="form-group">
            <div class="col-md-10">
                <input type="text" name="userId" style="display:none" value="@Model.Id"/>
                <input type="text" name="name" placeholder="user name"/>
                <br />
                <br />
                <textarea name="info" placeholder="Describe yourself, please."></textarea>
                <br />
                <br />
                <p>
                    state:
                    <select name="state">
                        <option value="0">Unknown</option>
                        <option value="1">Discussed</option>
                        <option value="2">Postponed</option>
                        <option value="3">Accepted</option>
                    </select>
                </p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
