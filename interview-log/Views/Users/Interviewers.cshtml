@using interview_log.Models;
@{
    ViewBag.Title = "Interviewers";
}

<h2>Interviewers</h2>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            User[] interviewers = interview_log.Models.User.Interviewers();
            foreach (User user in interviewers)
            {
                string url = "/Users/Details/" + @user.Id;
                <tr>
                <td>@i</td>
                <td><a href= @url>@user.UserName</a></td>
                <td>@user.Email</td>
                </tr>
                i++;
           }
        }
</tbody>
</table>
